<!-- Validation failure messages -->
<% if @cuisine.errors.any? %>
  <% @cuisine.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Cuisine #<%= @cuisine.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_cuisine/<%= @cuisine.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for cuisine_name -->
      <div class="form-group">
        <label for="cuisine_name" class="control-label">
          Cuisine name
        </label>

        <input type="text" id="cuisine_name" name="cuisine_name" placeholder="Cuisine name" class="form-control" value="<%= @cuisine.cuisine_name %>">
      </div>

      <!-- Label and input for bookmark_id -->
      <div class="form-group">
        <label for="bookmark_id" class="control-label">
          Bookmark
        </label>

        <input type="text" id="bookmark_id" name="bookmark_id" placeholder="Bookmark" class="form-control" value="<%= @cuisine.bookmark_id %>">
      </div>

      <button class="btn btn-warning">
        Update Cuisine
      </button>
      or
      <a href="/cuisines/<%= @cuisine.id %>">Cancel</a>
    </form>
  </div>
</div>
