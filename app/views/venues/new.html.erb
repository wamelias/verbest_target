<!-- Validation failure messages -->
<% if @venue.errors.any? %>
  <% @venue.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Venue</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_venue" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for venue_address -->
      <div class="form-group">
        <label for="venue_address" class="control-label">
          Venue address
        </label>

        <input type="text" id="venue_address" name="venue_address" placeholder="Venue address" class="form-control" value="<%= @venue.venue_address %>">
      </div>

      <!-- Label and input for venu_name -->
      <div class="form-group">
        <label for="venu_name" class="control-label">
          Venu name
        </label>

        <input type="text" id="venu_name" name="venu_name" placeholder="Venu name" class="form-control" value="<%= @venue.venu_name %>">
      </div>

      <!-- Label and input for most_liked_dishes -->
      <div class="form-group">
        <label for="most_liked_dishes" class="control-label">
          Most liked dishes
        </label>

        <input type="text" id="most_liked_dishes" name="most_liked_dishes" placeholder="Most liked dishes" class="form-control" value="<%= @venue.most_liked_dishes %>">
      </div>

      <button class="btn btn-success">
        Create Venue
      </button>
      or
      <a href="/venues">Cancel</a>
    </form>
  </div>
</div>
